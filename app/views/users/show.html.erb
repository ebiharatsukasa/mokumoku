<div class="container d-flex flex-column">
  <div class="row align-items-center">
    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
      <!-- Bg -->
      <div class="pt-16 rounded-top-md" style="
      background: url(http://localhost:3000/assets/profile-bg-891d83ae3dc08d5117b910c14df22bc7addabebfd4f55586ce2721f82970e93f.jpg) no-repeat;
      background-size: cover;
      "></div>
      <div class="d-flex align-items-end justify-content-between bg-white px-4 pt-2 pb-4 rounded-none rounded-bottom-md shadow-sm">
        <div class="d-flex align-items-center">
          <div class="me-2 position-relative d-flex justify-content-end align-items-end mt-n5">
            <img class="avatar-xl rounded-circle border border-4 border-white" src="/assets/user-default-image-f7d429132ff4fa75171ca6180826a20a580a6e64219f45e07e047398164fb3cf.png">
          </div>
          <div class="lh-1">
            <h2 class="mb-0">
              <%= @user.name %>
            </h2>
            <% if current_user.following?(@user) %>
              <button type="button" class="btn btn-danger btn-sm">
                <%= link_to "フォローを外す", user_relationships_path(@user.name), class: "text-white", method: :delete %>
              </button>
            <% else %>
              <button type="button" class="btn btn-success btn-sm">
                <%= link_to "フォローする", user_relationships_path(@user.name), class: "text-white", method: :post %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-0 mt-md-4">
    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
      <div class="card">
        <!-- Card header -->
        <div class="card-header">
          <h3 class="mb-0">プロフィール</h3>
        </div>
        <!-- Card body -->
        <div class="card-body">
          <h4 class="mb-0">Hobby</h4>
          <%= @user.hobby %>
        </div>
        <div class="card-body">
          <h4 class="mb-0">Profile</h4>
          <%= @user.profile %>
        </div>
      </div>
    </div>
  </div>
</div>
